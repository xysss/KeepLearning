<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.gaode.AMapTrackActivity">

    <com.amap.api.maps.MapView
        android:id="@+id/mMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:background="#1E000000"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/history_survey_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/survey_history_color_icon" />

        <TextView
            android:id="@+id/surveyMaxValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/history_survey_icon"
            android:layout_margin="1dp"
            android:textSize="10sp"
            android:textStyle="bold"
            android:text="100" />

        <TextView
            android:id="@+id/surveyAvgValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/history_survey_icon"
            android:layout_margin="1dp"
            android:layout_centerVertical="true"
            android:textSize="10sp"
            android:textStyle="bold"
            android:text="50" />

        <TextView
            android:id="@+id/surveyMinValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/history_survey_icon"
            android:layout_below="@+id/surveyAvgValue"
            android:layout_marginStart="1dp"
            android:layout_marginTop="133dp"
            android:textSize="10sp"
            android:textStyle="bold"
            android:text="0" />

    </RelativeLayout>




</RelativeLayout>