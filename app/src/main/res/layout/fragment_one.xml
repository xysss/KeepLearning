<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.xysss.keeplearning.app.widget.CustomToolBar
            android:id="@+id/customToolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="浓度单位："
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/one_concentrationUnit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="浓度值："
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/one_concentrationNum"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/text3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="物质名称："
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/one_materialName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="实时数据"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/button3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="数据信息"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/button4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="报警信息"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/button5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="读取物质库条目"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/button10"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="连接蓝牙"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/button9"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="连接mqtt"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>






        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:gravity="center"
                android:text="点我去登录界面"
                app:layout_constraintBottom_toTopOf="@+id/testPageBtn"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <Button
                android:id="@+id/getPermission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请权限"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loginBtn" />

            <Button
                android:id="@+id/testRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试数据库"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loginBtn" />

            <Button
                android:id="@+id/testPageBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点我去测试Fragment界面"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loginBtn" />

            <Button
                android:id="@+id/testListBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点我去测试List界面"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loginBtn" />

            <Button
                android:id="@+id/testDownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击我下载文件"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loginBtn" />

            <Button
                android:id="@+id/testUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击我上传文件"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loginBtn" />

            <Button
                android:id="@+id/testCrash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击测试捕获异常"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loginBtn" />

            <Button
                android:id="@+id/linkBlueTooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击去连接ble蓝牙"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loginBtn" />

            <TextView
                android:id="@+id/testUpdateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进度：==" />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


